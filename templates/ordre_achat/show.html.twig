{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5">OrdreAchat CRUD [show]</h1>
        <table class="w-full">
            <tbody>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Id</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.id }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Autobot</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.autobot ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">MontantMax</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.montantMax }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">DateCreation</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.dateCreation ? ordre_achat.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="mt-10 flex justify-center items-center">
            <a class="bg-blue-600 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('ordre_achat_index') }}">back to list</a>
            <a class="bg-yellow-600 ml-3 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('ordre_achat_edit', {'id': ordre_achat.id}) }}">edit</a>
            {{ include('ordre_achat/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}