{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5">Ordre Achat CRUD</h1>
        <table class="w-full">
            <thead>
            <tr class="border-2 border-grey-300">
                <th class="border-2 border-grey-300 pt-2 pb-2">Id</th>
                <th class="border-2 border-grey-300 pt-2 pb-2">Autobot</th>
                <th class="border-2 border-grey-300 pt-2 pb-2">MontantMax</th>
                <th class="border-2 border-grey-300 pt-2 pb-2">DateCreation</th>
                <th class="border-2 border-grey-300 pt-2 pb-2">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ordre_achat in ordre_achats %}
                <tr class="border-2 border-grey-300">
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.id }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.autobot ? 'Yes' : 'No' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.montantMax }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ ordre_achat.dateCreation ? ordre_achat.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">
                        <div class="flex justify-center items-center">
                            <a class="justify-center items-center text-center text-white mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('ordre_achat_show', {'id': ordre_achat.id}) }}"><i class="fas fa-eye"></i></a>
                            <a class="justify-center items-center text-center text-white ml-2 mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('ordre_achat_edit', {'id': ordre_achat.id}) }}"><i
                                        class="fas fa-wrench"></i></a>
                            {{ include('ordre_achat/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="border-2 border-grey-300 text-xl">
                    <td class="pt-5 pb-5" colspan="5">Aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="w-full mt-10">
            <a class="bg-bcc-green p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('ordre_achat_new') }}">Créer ordreAchat</a>
        </div>
    </div>
{% endblock %}