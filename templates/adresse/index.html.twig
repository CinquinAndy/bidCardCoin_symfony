{% extends 'base.html.twig' %}
{% block body %}
    {% include 'formCDN.html.twig' %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5">Adresse CRUD</h1>
        <table class="w-full tablesorter" id="my_table">
            <thead class="border-2 border-grey-300">
            <tr class="border-2 border-grey-300">
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Id</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Pays</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Ville</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">CodePostal</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Rue</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">actions</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
            </tr>
            </thead>
            <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ adresse.id }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ adresse.pays }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ adresse.ville }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ adresse.codePostal }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ adresse.rue }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">
                        <div class="flex justify-center items-center">
                            <a class="justify-center items-center text-center text-white mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('adresse_show', {'id': adresse.id}) }}"><i class="fas fa-eye"></i></a>
                            <a class="justify-center items-center text-center text-white ml-2 mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('adresse_edit', {'id': adresse.id}) }}"><i class="fas fa-wrench"></i></a>
                            {{ include('adresse/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="border-2 border-grey-300 text-xl">
                    <td class="pt-5 pb-5" colspan="6">Aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="w-full mt-10">
            <a class="bg-bcc-green p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('adresse_new') }}">Créer adresse</a>
        </div>
    </div>

    <div class="w-full flex justify-center items-center mt-10">Paginate</div>

{% endblock %}
