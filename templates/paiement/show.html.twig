{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5">Paiement CRUD [show]</h1>
        <table class="w-full">
            <tbody>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Id</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ paiement.id }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">TypePaiement</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ paiement.typePaiement }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">ValidationPaiement</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ paiement.validationPaiement ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="mt-10 flex justify-center items-center">
            <a class="bg-blue-600 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('paiement_index') }}">back to list</a>
            <a class="bg-yellow-600 ml-3 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('paiement_edit', {'id': paiement.id}) }}">edit</a>
            {{ include('paiement/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}