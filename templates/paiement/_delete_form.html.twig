<form method="post" action="{{ path('paiement_delete', {'id': paiement.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ paiement.id) }}">
    <button type="submit"
            class="justify-center items-center text-center text-white ml-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white">
        <i class="fas fa-trash"></i></button>
</form>
