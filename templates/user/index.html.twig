{% extends 'base.html.twig' %}
{% block body %}
    {% include 'formCDN.html.twig' %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5 ">User CRUD</h1>
        <table class="w-full tablesorter" id="my_table">
            <thead>
            <tr class="border-2 border-grey-300">
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Id</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Email</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Roles</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Nom</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Prenom</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Age</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">NumeroMobile</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">NumeroFixe</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">VerifSolvabilite</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">VerifIdentite</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">VerifRessortissant</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">EstCommissairePriseur</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">ListeMotCle</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
                <th class="border-2 border-grey-300 pt-2 pb-2"><div class="flex justify-start items-center"><span class="flex w-10/12 justify-center items-center ml-3 text-center">Actions</span> <span class=" flex justify-end items-center mr-3"><i class="fas fa-sort"></i></span></div></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-2 border-grey-300">
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.id }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.email }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.nom }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.prenom }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.age }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.numeroMobile }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.numeroFixe }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.verifSolvabilite ? 'Yes' : 'No' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.verifIdentite ? 'Yes' : 'No' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.verifRessortissant ? 'Yes' : 'No' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.estCommissairePriseur ? 'Yes' : 'No' }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">{{ user.listeMotCle }}</td>
                    <td class="border-2 border-grey-300 pt-2 pb-2">
                        <div class="flex justify-center items-center">
                            <a class="justify-center items-center text-center text-white mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                            <a class="justify-center items-center text-center text-white ml-2 mr-2 bg-white bg-opacity-10 rounded-full p-1.5 border border-white"
                               href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-wrench"></i></a>
                            {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="border-2 border-grey-300 text-xl">
                    <td class="pt-5 pb-5" colspan="15">Aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        <div class="w-full mt-10">
            <a class="bg-bcc-green p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('user_new') }}">Créer utilisateur</a>
        </div>
e
{% endblock %}