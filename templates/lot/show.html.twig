{% extends 'base.html.twig' %}
{% block body %}

    <div class="w-full flex justify-center text-white relative">
        <h1 class="text-start text-xl font-bold w-full ml-5 border-b">Lot n°{{ lot.id() }}</h1>
        <a href="/enchere/new/{{ lot.id() }}&{{ venteId }}" class="absolute right-0 top-0 mt-20 mr-10 bg-bcc-green p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow">Encherir</a>
        <p class="absolute right-0 top-0 mt-10 mr-10 p-3 justify-center items-center text-center text-xs text-white">Dernière enchère : {{ enchereValue }}€</p>
    </div>
    <div class="bg-image w-full flex flex-wrap justify-center gap-3 py-5">
        <div class="backdrop w-10/12 md:w-1/2 bg-white bg-opacity-10 rounded p-3 text-white border border-gray-300 shadow-lg h-auto relative">
            <!-- header -->
            <div class="w-8/12 mb-3 pb-3 border-b border-1 border-white">
                <h3 class="text-xl font-semibold text-shadow">{{ lot.getNom() }}</h3>
            </div>
            <!-- body -->
            <div>
                <img src="{{ lot.getPhoto() }}" alt="image lot {{ lot.getId() }}"
                     class="w-full h-96 object-scale-down object-center mb-2">
                <p class="mb-3 tracking-wide text-base text-shadow">
                    {{ lot.getDescription() }}
                </p>
                <p class="mb-10 tracking-wide text-base text-shadow">
                    <i class="fas fa-map-pin mr-2"></i> : {{ lot.getLieuVenteLot() }}
                </p>
                <p class="px-3 py-1.5 text-sm fixed right-0 top-0 font-bold">
                    {{ lot.getDateVenteLot() }}
                </p>
                <p class="px-3 py-1.5 text-lg fixed right-0 top-5 font-bold">
                    {{ lot.getNumberOfProducts() }} produits
                </p>
                <p class="px-3 py-1.5 text-lg absolute left-0 bottom-0 font-bold">
                    {{ lot.getPrixOfProducts() }} €
                </p>
            </div>
        </div>
    </div>

    <div class="w-full flex justify-center text-white">
        <h1 class="text-start text-xl font-bold w-full ml-5 border-b border-gray-200">Liste des produits du lot n°{{ lot.id() }}</h1>
    </div>
    <div class="bg-image w-full flex flex-wrap justify-center gap-3 py-5">
        {% for key in produitTab|keys %}
            <div class="backdrop w-10/12 md:w-1/4 bg-white bg-opacity-10 rounded p-3 text-white border border-gray-300 shadow-lg h-auto relative">
                <!-- header -->
                <div class="w-8/12 mb-3 pb-3 border-b border-1 border-white">
                    <h3 class="text-xl font-semibold text-shadow">{{ produitTab[key].getNomProduit() }}</h3>
                </div>
                <!-- body -->
                <div>
                    <img src="{{ produitTab[key].getPhoto() }}" alt="image produit {{ produitTab[key].getId() }}"
                         class="w-full h-48 object-cover mb-2">
                    <p class="mb-3 tracking-wide text-base text-shadow">
                        {{ produitTab[key].getDescription() }}
                    </p>

                    <p class="mb-10 tracking-wide text-base text-shadow">
                        <i class="fas fa-palette"></i> Artiste : {{ produitTab[key].getNomArtiste() }}
                        <br>
                        <i class="fas fa-info-circle"></i> Style : {{ produitTab[key].getNomStyle() }}
                    </p>

                    <p class="px-3 py-1.5 text-sm fixed right-0 top-0 font-bold">
                        n°{{ produitTab[key].getId() }}
                    </p>
                    <p class="px-3 py-1.5 text-sm fixed right-0 top-5 font-bold">
                        Réf : {{ produitTab[key].getReferenceCatalogue() }}
                    </p>
                    <p class="px-3 py-1.5 text-lg absolute left-0 bottom-0 font-bold">
                        {{ produitTab[key].getWholePriceEstimations() }} €
                    </p>
{#                    <a href="/lot/{{ produitTab[key].getId() }}" class="border-l border-t border-white bg-white bg-opacity-0 px-3 py-1.5 hover:bg-opacity-10 text-lg absolute right-0 bottom-0 font-bold">#}
{#                        Detail du lot <i class="ml-3 fas fa-chevron-right"></i>#}
