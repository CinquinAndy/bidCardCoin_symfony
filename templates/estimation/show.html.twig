{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center text-white w-full">
        <h1 class="text-2xl font-bold  w-full mb-5">Estimation CRUD [show]</h1>
        <table class="w-full">
            <tbody>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Id</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ estimation.id }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Date</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ estimation.date ? estimation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="border-2 border-grey-300 pt-2 pb-2">Prix</th>
                <td class="border-2 border-grey-300 pt-2 pb-2">{{ estimation.prix }}</td>
            </tr>
            </tbody>
        </table>
        <div class="mt-10 flex justify-center items-center">
            <a class="bg-blue-600 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('estimation_index') }}">back to list</a>
            <a class="bg-yellow-600 ml-3 p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
               href="{{ path('estimation_edit', {'id': estimation.id}) }}">edit</a>
            {{ include('estimation/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}